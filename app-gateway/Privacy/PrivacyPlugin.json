{
  "$schema":"https://raw.githubusercontent.com/rdkcentral/rdkservices/main/Tools/json_generator/schemas/plugin.schema.json",
  "info":{
     "title":"Privacy Plugin",
     "callsign":"org.rdk.Privacy",
     "locator":"libWPEFrameworkPrivacy.so",
     "status":"development",
     "description":"The `Privacy` plugin allows managing privacy settigs from ESS back end."
  },
  "configuration":{
     "type":"object",
     "properties":{
        "configuration":{
           "type":"object",
           "properties":{
              "clientid":{
                 "description":"Client ID",
                 "type":"string"
              },
              "essurl":{
                 "description":"URL of the ESS server",
                 "type":"string"
              },
              "esssettingsbaseretrybackofftimesec":{
               "description":"Base retry backoff time in seconds",
               "type":"integer"
              },
              "esssettingsretrylimitc":{
               "description":"Retry limit count",
               "type":"integer"
              },
              "esssettingssyncafterbootmaxdelaysec":{
               "description":"Sync after boot max delay time in seconds",
               "type":"integer"
              },
              "esssettingssyncafterlinchpindelaysec":{
               "description":"Sync after launch pin delay time in seconds",
               "type":"integer"
              }
           },
           "required":[
              "clientid",
              "essurl"
           ]
        }
     },
     "required":[
        "configuration"
     ]
  },
  "interface":{
     "$ref":"Privacy.json#"
  }
}
